#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
#define Size 7

int main()
{
	int Arr[Size]={};
	int i=0,E_Cnt=0;
	
	printf("\n Enter Array Elements=\n\n");
	
	for(i=0;i<Size;i++)
	{
		printf("\n Enter Element[%d]=",i+101);
		scanf("%d",&Arr[i]);
	}
	
	for(i=0;i<Size;i++)
	{
		printf("\n Value of RollNo %d=%d",i+101,Arr[i]);
	}
	
	printf("\n\n Press any key to continue...");
	
	system("cls");
	
	for(i=0;i<Size;i++)
	{
		if(Arr[i]%2==0)
		{
			E_Cnt++;
		}
	}
	
	printf("\n Count of Even Element %d in given array",E_Cnt);
	
	printf("\n\n Thanks!!");
	
	getch();
	return 0;
}