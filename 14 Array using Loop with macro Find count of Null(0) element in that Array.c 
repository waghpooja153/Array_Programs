#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
#define Size 7

int main()
{
	int Arr[Size]={};
	int i=0,Z_Cnt=0;
	
	printf("\n Enter Array Elements=\n\n");
	
	for(i=0;i<Size;i++)
	{
		printf("\n Enter Element[%d]=",i+101);
		scanf("%d",&Arr[i]);
	}
	
	for(i=0;i<Size;i++)
	{
		printf("\n Value of Element %d=%d",i+101,Arr[i]);
	}
	
	printf("\n\n Press any key to continue...");
	
	system("cls");
	
	for(i=0;i<Size;i++)
	{
		if(Arr[i]==0)
		{
			Z_Cnt++;
		}
	}
	
	printf("\n Count of Zero Element %d in given array",Z_Cnt);
	
	printf("\n\n Thanks!!");
	
	getch();
	return 0;
}